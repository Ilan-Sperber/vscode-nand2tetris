{
    "Class": {
        "prefix": "class",
        "body": ["class ${1:Name} {", "\t$0", "}"],
        "description": "Creates the boilerplate for a normal class." 
    },
    "Function": {
        "prefix": "function",
        "body": ["function ${1|void,int,String,Array,char|} ${2:name} (${3}) {", "\t$0", "}"],
        "description": "Creates the boilerplate of a function."
    },
    "return": {
        "prefix": "return",
        "body": ["return"],
        "description": "Ends function execution."
    },
    "init": {
        "prefix": "init",
        "body": ["init()\n"]
    },
    "abs": {
        "prefix": "abs()",
        "body": ["abs(int ${1:x})"],
        "description": "The `abs()` function returns the absolute value of a number"
    },
    "multiply": {
        "prefix": "multiply()",
        "body": ["multiply(int ${1:x}, int ${2:y})"]
        
    }
}